<h1><%= c ? 'Editar' : 'Nova' %> Linha de Orçamento</h1>
<form method="post" action="<%= c ? '/orcamento/' + c.id : '/orcamento' %>" class="form-grid">
  <label>Nome <input required type="text" name="name" value="<%= c?.name || '' %>" /></label>
  <label>Tipo
    <select name="type">
      <option value="receita" <%= c?.type==='receita'?'selected':'' %>>Receita</option>
      <option value="despesa" <%= c?.type==='despesa'?'selected':'' %>>Despesa</option>
    </select>
  </label>
  <label>Valor Previsto (€)
    <input type="number" step="0.01" name="planned" value="<%= c ? (c.planned_cents/100).toFixed(2) : '' %>" />
  </label>
  <button class="btn"><%= c ? 'Guardar' : 'Criar' %></button>
</form>