<div class="toolbar">
  <h1>Editar Jantar</h1>
  <div style="margin-left:auto">
    <a class="btn btn-light" href="/jantares">Voltar</a>
  </div>
</div>

<div class="card">
  <form method="post" action="/jantares/<%= j.id %>" class="form-grid">
    <label>Título
      <input name="title" value="<%= j.title || '' %>" placeholder="ex.: Jantar de Arroz de Pato">
    </label>

    <label>Data
      <input type="date" name="dt" value="<%= j.dt || '' %>">
    </label>

    <label>N.º de pessoas
      <input type="number" min="0" inputmode="numeric" name="pessoas" value="<%= j.pessoas || 0 %>">
    </label>

    <label>Valor por pessoa (€)
      <input name="valor_pessoa" inputmode="decimal" value="<%= euros(j.valor_pessoa_cents || 0) %>">
      <small class="muted">Podes sobrepor por convidado em “Convidados”.</small>
    </label>

    <label>Despesas totais (€)
      <input name="despesas" inputmode="decimal" value="<%= euros(j.despesas_cents || 0) %>">
    </label>

    <div style="grid-column:1/-1;display:flex;gap:8px">
      <button class="btn">Guardar</button>
      <a class="btn btn-light" href="/jantares">Cancelar</a>
    </div>
  </form>
</div>
