<!-- views/movimentos_edit.ejs -->
<h1>Editar Movimento</h1>

<form method="post" action="/movimentos/<%= m.id %>" class="form-grid">
  <label>Data
    <input type="date" name="dt" required value="<%= m.dt %>" />
  </label>

  <label>Tipo
    <select name="type" required>
      <option value="receita" <%= m.type === 'receita' ? 'selected' : '' %>>Receita</option>
      <option value="despesa" <%= m.type === 'despesa' ? 'selected' : '' %>>Despesa</option>
    </select>
  </label>

  <label>Descrição
    <input type="text" name="descr" value="<%= m.descr || '' %>" />
  </label>

  <label>Valor (€)
    <input type="number" step="0.01" name="valor" required value="<%= (m.valor_cents/100).toFixed(2) %>" />
  </label>

  <button class="btn">Guardar</button>
  <a class="btn btn-light" href="/movimentos">Cancelar</a>
</form>
