<div class="toolbar">
  <h1>Distribuição por € <%= euros(bloco) %> (rodízio)</h1>
  <a class="btn btn-light" style="margin-left:auto" href="/casais">Voltar</a>
</div>

<div class="muted" style="margin-bottom:12px">
  Blocos completos: <b><%= blocosCompletos %></b> × € <%= euros(bloco) %>
  — <b>Resto disponível:</b> € <%= euros(restoDisponivel) %>
  — Novos blocos por aplicar: <b><%= novosBlocos %></b>
</div>

<div class="card" style="margin-bottom:12px; padding-bottom:8px">
  <form method="post" action="/casais/rodizio/inicio" class="form-row" style="gap:8px; align-items:center">
    <label>Início da sequência:</label>
    <select name="casal_id">
      <option value="">(primeiro da lista)</option>
      <% (linhas || []).forEach(function(l){ %>
        <option value="<%= l.id %>" <%= (inicioId && inicioId===l.id) ? 'selected' : '' %>><%= l.nome %></option>
      <% }) %>
    </select>
    <button class="btn btn-primary">Definir início</button>
  </form>
</div>

<div class="card" style="margin-bottom:12px;">
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Casal</th>
        <th>Atual (€)</th>
        <th>Novos blocos</th>
        <th>Alvo (€)</th>
      </tr>
    </thead>
    <tbody>
      <% (linhas || []).forEach(function(l, idx){ %>
        <tr>
          <td><%= idx + 1 %></td>
          <td><%= l.nome %></td>
          <td>€ <%= euros(l.atual) %></td>
          <td><%= l.novos_blocks %></td>
          <td>€ <%= euros(l.alvo) %></td>
        </tr>
      <% }) %>
      <% if (!linhas || !linhas.length) { %>
        <tr><td colspan="5" class="muted">Sem casais.</td></tr>
      <% } %>
    </tbody>
  </table>
</div>

<div class="card">
  <form method="post" action="/casais/rodizio/aplicar"
        onsubmit="return confirm('Aplicar a distribuição dos novos blocos?')">
    <button class="btn btn-success" <%= novosBlocos > 0 ? '' : 'disabled' %>>
      Aplicar distribuição (<%= novosBlocos %> bloco<%= novosBlocos===1?'':'s' %>)
    </button>
    <% if (novosBlocos === 0) { %>
      <span class="muted" style="margin-left:8px">Não há blocos novos por aplicar.</span>
    <% } %>
  </form>
</div>

