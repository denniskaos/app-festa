<!-- views/casais_rodizio.ejs -->
<div class="toolbar">
  <h1>Distribuição por € <%= euros(bloco) %> (rodízio)</h1>
  <a class="btn btn-light" style="margin-left:auto" href="/casais">Voltar</a>
</div>

<div class="muted" style="margin-bottom:12px">
  Blocos completos: <b><%= blocosCompletos %></b> × € <%= euros(bloco) %>
  — <b>Resto:</b> € <%= euros(restoTeorico) %>
</div>

<div class="card" style="margin-bottom:16px">
  <form method="post" action="/definicoes/rodizio" class="form-grid" style="align-items:end">
    <label>Início da sequência:
      <select name="inicio_casal_id">
        <option value="">(primeiro da lista)</option>
        <% (linhas||[]).forEach(l => { %>
          <option value="<%= l.id %>" <%= (inicioId && inicioId===l.id) ? 'selected' : '' %>><%= l.nome %></option>
        <% }) %>
      </select>
    </label>
    <button class="btn btn-primary">Definir início</button>
  </form>
</div>

<div class="card">
  <table class="table">
    <thead>
      <tr><th>#</th><th>Casal</th></tr>
    </thead>
    <tbody>
      <% (linhas||[]).forEach((l, idx) => { %>
        <tr>
          <td><%= idx+1 %></td>
          <td><%= l.nome %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
