<%- include('partials/header', { title: 'Rodízio' }) %>

<h1>Rodízio</h1>

<div class="cards" style="margin-bottom: 16px;">
  <div class="card stat">
    <div class="stat-label">Saldo movimentos</div>
    <div class="stat-number">€ <%= euros(resumo.saldoMovimentos) %></div>
    <div class="muted">receitas − despesas + peditórios + patrocínios</div>
  </div>

  <div class="card stat">
    <div class="stat-label">Lucro projetado (jantares pendentes)</div>
    <div class="stat-number">€ <%= euros(resumo.lucroProjetado) %></div>
    <div class="muted">apenas jantares ainda não lançados</div>
  </div>

  <div class="card stat">
    <div class="stat-label">Saldo projetado</div>
    <div class="stat-number">€ <%= euros(resumo.saldoProjetado) %></div>
  </div>

  <div class="card stat">
    <div class="stat-label">Total em casais</div>
    <div class="stat-number">€ <%= euros(resumo.totalCasaCents) %></div>
  </div>

  <div class="card stat">
    <div class="stat-label">Resto teórico</div>
    <div class="stat-number">€ <%= euros(resumo.restoTeorico) %></div>
  </div>

  <div class="card stat">
    <div class="stat-label">Aplicado do resto</div>
    <div class="stat-number">€ <%= euros(resumo.aplicadoRestoCents) %></div>
  </div>

  <div class="card stat">
    <div class="stat-label">Resto disponível</div>
    <div class="stat-number" style="color:green;font-weight:bold;">€ <%= euros(resumo.restoDisponivel) %></div>
    <div class="muted">apenas com base nos movimentos (sem projetado)</div>
  </div>
</div>

<hr>

<h2>Aplicar parte do resto a um casal</h2>

<form action="/definicoes/rodizio/aplicar" method="post" style="margin-bottom: 24px;">
  <label>Casal</label>
  <select name="casal_id" required>
    <option value="">(escolher casal)</option>
    <% casais.forEach(c => { %>
      <option value="<%= c.id %>"><%= c.nome %> (atual: € <%= euros(c.valor_casa_cents) %>)</option>
    <% }) %>
  </select>

  <label>Valor (€)</label>
  <input type="number" name="valor" step="0.01" min="0" required>

  <button type="submit" class="btn btn-success">Aplicar</button>
  <div class="muted">Não pode exceder o <b>resto disponível</b></div>
</form>

<hr>

<h2>Parâmetros do rodízio</h2>

<form action="/definicoes/rodizio" method="post" style="margin-bottom: 24px;">
  <label>Tamanho do bloco (€)</label>
  <input type="number" name="bloco" step="0.01" value="<%= euros(settings.rodizio_bloco_cents || 500000) %>">

  <label>Começar em (casal)</label>
  <select name="inicio_casal_id">
    <option value="">(não definido)</option>
    <% casais.forEach(c => { %>
      <option value="<%= c.id %>" <%= settings.rodizio_inicio_casal_id == c.id ? 'selected' : '' %>>
        <%= c.nome %>
      </option>
    <% }) %>
  </select>

  <button type="submit" class="btn btn-primary">Guardar</button>
</form>

<hr>

<h2>Histórico de aplicações do resto</h2>

<% if (historico.length === 0) { %>
  <p class="muted">Nenhuma aplicação registada ainda.</p>
<% } else { %>
  <table class="table">
    <thead>
      <tr>
        <th>Data</th>
        <th>Casal</th>
        <th>Valor (€)</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% historico.forEach(h => { %>
        <tr>
          <td><%= h.dt %></td>
          <td><%= h.casal_nome %></td>
          <td>€ <%= euros(h.valor_cents) %></td>
          <td style="white-space:nowrap">
            <form action="/definicoes/rodizio/edit/<%= h.id %>" method="post" style="display:inline">
              <input type="number" step="0.01" name="valor" placeholder="novo valor (€)" style="width:90px;">
              <button type="submit" class="btn btn-sm btn-warning">Editar</button>
            </form>
            <form action="/definicoes/rodizio/delete/<%= h.id %>" method="post" style="display:inline" onsubmit="return confirm('Apagar esta aplicação?');">
              <button type="submit" class="btn btn-sm btn-danger">Apagar</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } %>

<%- include('partials/footer') %>
